FROM python:3.12-slim

WORKDIR /app

# Crea la directory del database con permessi di scrittura
RUN mkdir -p /app/monitor && chmod 777 /app/monitor

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy application
COPY core.py .
COPY vLLMsr_model.py .

# Run the filter router
CMD ["uvicorn", "core:app", "--host", "0.0.0.0", "--port", "8000"]
