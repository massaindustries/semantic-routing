FROM python:3.12-slim

WORKDIR /app

# Crea la directory del database con permessi di scrittura
RUN mkdir -p /app/monitor && chmod 777 /app/monitor

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copia SOLO i file necessari per la dashboard
COPY monitor/ ./monitor/

EXPOSE 8001

CMD ["uvicorn", "monitor.dashboard:app", "--host", "0.0.0.0", "--port", "8001"]
